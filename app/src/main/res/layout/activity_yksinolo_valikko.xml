<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/container"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="?attr/actionBarSize">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
      android:id="@+id/activity_valikko_yksinolo"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="1dp"
      android:paddingLeft="4dp"
      android:paddingRight="4dp"
      android:paddingTop="1dp"
      tools:context="com.example.mobidogi.YksinoloValikkoActivity">

      <Button
        android:contentDescription="@string/title_luento_yksinolo"
        android:id="@+id/simpleImageViewYksinoloLuento"
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:drawablePadding="@null"
        android:background="@drawable/yksinolomokottavamopsi"
        android:paddingTop="8dp"
        android:layout_marginBottom="3dp"
        android:text="@string/title_luento_yksinolo"
        android:textSize="@dimen/pictureTitles"
        android:textColor="@color/colorTitles2"
        app:fontFamily="@font/cinzel_bold"/>

      <Button
        android:contentDescription="@string/title_omistajasta_poispain"
        android:id="@+id/simpleImageViewYksinoloLuopuminen"
        android:layout_width="fill_parent"
        android:layout_height="260dp"
        android:drawablePadding="@null"
        android:background="@drawable/omistajasta_poispain_ilmaiseen"
        android:paddingTop="8dp"
        android:layout_marginBottom="3dp"
        android:text="@string/title_omistajasta_poispain"
        android:textSize="@dimen/pictureTitles"
        android:textColor="@color/colorTitles2"
        app:fontFamily="@font/cinzel_bold"/>

      <Button
        android:contentDescription="@string/title_alustallemeno"
        android:id="@+id/SimpleImageViewMeneminenAlustalle"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:drawablePadding="@null"
        android:background="@drawable/kohdentaminen_ilmaiseen"
        android:paddingTop="8dp"
        android:layout_marginBottom="3dp"
        android:text="@string/title_alustallemeno"
        android:textSize="@dimen/pictureTitles"
        android:textColor="@color/colorTitles2"
        app:fontFamily="@font/cinzel_bold"/>

      <Button
        android:contentDescription="@string/title_yksinolonkoulutus"
        android:id="@+id/simpleImageViewYksinolonkoulutus"
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:drawablePadding="@null"
        android:background="@drawable/koulutus_yksinolo"
        android:paddingTop="8dp"
        android:layout_marginBottom="3dp"
        android:text="@string/title_yksinolonkoulutus"
        android:textSize="@dimen/pictureTitles"
        android:textColor="@color/colorTitles2"
        app:fontFamily="@font/cinzel_bold"/>

    </LinearLayout>
  </ScrollView>

  <android.support.design.widget.BottomNavigationView
    android:id="@+id/nav_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:background="?android:attr/windowBackground"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:menu="@menu/bottom_nav_menu"
    app:itemIconTint="@color/colorTitles1"
    app:itemTextColor="@color/colorTitles1"
    app:itemBackground="@color/colorTitles2"/>
</android.support.constraint.ConstraintLayout>
